
{
  "scripts": {
    "start": "npm run compile && node server.js",
    "serve": "npm run compile && npm run watch-css & npm run watch-js",
    "compile": "npm run compile-css-prod & npm run compile-js",
    "compile-prod": "npm run compile-css & npm run compile-js",
    "compile-css": "sass ./src/scss/styles.scss ./public/dist/css/styles.css",
    "compile-css-prod": "sass ./src/scss/styles.scss ./public/dist/css/styles.css --no-source-map --style=compressed",
    "watch-css": "sass --watch ./src/scss/styles.scss ./public/dist/css/styles.css",
    "compile-js": "rollup ./src/js/scripts.js --file ./public/dist/js/scripts.js --format iife",
    "watch-js": "rollup ./src/js/scripts.js --file ./public/dist/js/scripts.js --format iife --watch"
  },
  "dependencies": {
    "express": "^4.17.2",
    "rollup": "^2.63.0",
    "sass": "^1.47.0"
  }
}